{
    "name": "Craigslist Preview",
    "version": "1.0.18",
    "manifest_version" : 2,
    "description": "Extension to prefetch Craigslist ad images",
    "background": { "scripts": ["background.js"] },
    "icons": { "48": "icon48.png",
               "128": "icon128.png" },
    "permissions": [
        "http://*.craigslist.org/",
        "http://*.craigslist.ca/",
        "http://*.craigslist.hk/",
        "http://*.craigslist.co.uk/"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*.craigslist.org/*",
                "http://*.craigslist.ca/*",
                "http://*.craigslist.hk/*",
                "http://*.craigslist.co.uk/*"
            ],
            "js": [
                "jquery-1.3.2.min.js",
                "jquery-ui-1.7.2.custom.min.js",
                "jquery.ba-dotimeout.js",
                "cl.js"],
            "css": ["cl.css"],
            "run_at": "document_start"
        }
    ]
}
